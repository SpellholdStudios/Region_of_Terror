IF
	Allegiance(Myself,ENEMY)
	See([ANYONE])
	!StateCheck(LastSeenBy,STATE_HELPLESS)
	GlobalLT("TANARIPARALYZE","LOCALS",7)
THEN
	RESPONSE #100
		ForceSpell(LastSeenBy,TANARI_PARALYZE)
		IncrementGlobal("TANARIPARALYZE","LOCALS",1)
